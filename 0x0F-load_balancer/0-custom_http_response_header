#!/usr/bin/env bash
# Script to configure a brand new Ubuntu machine to have Nginx with a custom HTTP header

# Update package list and install Nginx
apt-get update
apt-get install -y nginx

# Get the hostname of the machine
HOSTNAME=$(hostname)

# Create the Nginx configuration file with the custom header
cat <<EOL > /etc/nginx/conf.d/custom_header.conf
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    location / {
        add_header X-Served-By $HOSTNAME;
    }
}
EOL

# Restart Nginx to apply the changes
systemctl restart nginx
